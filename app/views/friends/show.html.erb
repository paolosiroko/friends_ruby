
<div class="card">
  <div class="card-header">
  Friend details
  </div>
  <div class="card-body">
    <h5 class="card-title">  <%= @friend.first_name %>  <%= @friend.last_name %></h5>
    <p class="card-text">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.twitter %>
    </p>
    <br/>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-outline-primary m-1" %> 

    <%= link_to "Back to friends", friends_path, class:"btn btn-outline-secondary m-1" %>
  
    <%= button_to "Destroy this friend", @friend, method: :delete ,class:"btn btn-outline-danger m-1" %>
  </div>
</div>